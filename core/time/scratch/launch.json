    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: CIP_EMULATOR",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cip_emulator.py",
            "console": "integratedTerminal",
            //"args": ["--no-gui", "--server-only", "--quiet"]
            "args": ["--no-gui", "--server-only"]
        },
        {
            "name": "Run Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
